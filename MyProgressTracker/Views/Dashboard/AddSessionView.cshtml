@{
    ViewData["Title"] = "Add Session Page";

}

@model MyProgressTracker.Models.AddSessionViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Subject</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/AddCourseStyle.css" asp-append-version="true" />
</head>

<body>
    <div class="container">
        <form id="contact" action="AddSession" method="post">
            <h3>Add New Session</h3>
            <h4>Add your studied session with spent date and time.</h4>
            <fieldset>
                <input asp-for="Session.SessionName" placeholder="Session Name" type="text" tabindex="1" required autofocus>
            </fieldset>
            <fieldset>
                <select id="subjectSelect" asp-for="Session.SubjectID" tabindex="2" required autofocus>
                    <option value="" disabled selected>Select Subject </option>
                    @{
                        foreach (var subject in Model.subjects)
                        {
                            <option value="@subject.SubjectId"> @subject.SubjectName - @subject.CourseName</option>
                        }
                    }
                </select>
            </fieldset>
            <fieldset>
                <h4>Session Start Date & Time</h4>
                <input asp-for="Session.SessionStartTime" placeholder="Start Date & Time" type="datetime-local" tabindex="3" required>
            </fieldset>
            <fieldset>
                <h4>Session End Date & Time</h4>
                <input asp-for="Session.SessionEndTime" placeholder="End Date & Time" type="datetime-local" tabindex="4" required>
            </fieldset>
            <fieldset>
                <textarea asp-for="Session.SessionDescription" placeholder="Discription" tabindex="5" required></textarea>
            </fieldset>
            <fieldset>
                <button name="submit" type="submit" id="contact-submit" data-submit="...Sending">Submit</button>
            </fieldset>

        </form>
        <div class="container-back-add-subject">
            <button id="btn-back-add-sessions">Back to Study Sessions</button>
        </div>

    </div>
    <script>
        document.getElementById('btn-back-add-sessions').onclick = function () {
            window.location.href = 'StudySessionsView';
        };

    </script>


    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <!-- Custom JS -->
    <script src="~/js/dashboardscript.js"></script>
</body>

</html>